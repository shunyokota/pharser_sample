{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5", // TSはECMAScript 5に変換
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "typeRoots": [
      "types",
      "node_modules/@types",
      "node_module/phaser/types",
      "types/*"
    ],
    "types": [
      "Phaser"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "moduleResolution": "node"
  }
}